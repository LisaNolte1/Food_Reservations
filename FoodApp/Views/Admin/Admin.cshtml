@{
    ViewBag.Title = "Admin";
}

<div class="container">
    <div class="row">
        <h1>ADMIN DASHBOARD</h1>
    </div>

    <hr style="border-top: 3px double #8c8b8b" />

    <div class="row">
        <h2>Current Event Details</h2>
    </div>

    <hr />

    <div class="row">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Status</th>
                    <th scope="col">Dietary Preference</th>
                    <th scope="col">Cuisine Option</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>user1</td>
                    <td>accepted</td>
                    <td>halaal</td>
                    <td>chicken burger</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>user2</td>
                    <td>rejected</td>
                    <td>NA</td>
                    <td>NA</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>user3</td>
                    <td>accepted</td>
                    <td>basic</td>
                    <td>rib burger</td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr />

    <div class="row">
        <a href="https://localhost:44337/Admin/CreateEvent"><button class="btn btn-primary">Create New Event</button></a>
    </div>

    <hr style="border-top: 3px double #8c8b8b" />

    <div class="row">
        <h2>Historic Event Statistics</h2>
    </div>

    <hr />

    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    Bar Chart
                </div>
                <div class="card-body">
                    <canvas class="" id="barChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    Pie Chart
                </div>
                <div class="card-body">
                    <canvas class="" id="pieChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    Line Chart
                </div>
                <div class="card-body">
                    <canvas class="" id="lineChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <hr />
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.js" integrity="sha256-qSIshlknROr4J8GMHRlW3fGKrPki733tLq+qeMCR05Q=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js" integrity="sha256-xKeoJ50pzbUGkpQxDYHD7o7hxe0LaOGeguUidbq6vis=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.css" integrity="sha256-IvM9nJf/b5l2RoebiFno92E5ONttVyaEEsdemDC6iQA=" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.js" integrity="sha256-arMsf+3JJK2LoTGqxfnuJPFTU4hAK57MtIPdFpiHXOU=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.css" integrity="sha256-aa0xaJgmK/X74WM224KMQeNQC2xYKwlAt08oZqjeF0E=" crossorigin="anonymous" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" integrity="sha256-Uv9BNBucvCPipKQ2NS9wYpJmi8DTOEfTA/nH2aoJALw=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.min.js" integrity="sha512-wOLiP6uL5tNrV1FiutKtAyQGGJ1CWAsqQ6Kp2XZ12/CvZxw8MvNJfdhh0yTwjPIir4SWag2/MHrseR7PRmNtvA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script type="text/javascript">
        const barChart = document.getElementById('barChart').getContext('2d');

        var myBarChart = new Chart(barChart, {
            type: 'bar',
            data: {
                labels: ['001', '002', '003'],
                datasets: [{
                    label: '# of Bookings',
                    data: [100, 200, 300], 
                    backgroundcolor: 'rgb(6, 128, 250)',
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        })
    </script>

    <script type="text/javascript">
        const pieChart = document.getElementById('pieChart').getContext('2d');

        var myPieChart = new Chart(pieChart, {
            type: 'pie',
            data: {
                labels: ['001', '002', '003'],
                datasets: [{
                    label: 'Pie Chart',
                    data: [100, 200, 300],
                    backgroundcolor: 'rgb(6, 128, 250)',
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        })
    </script>

    <script type="text/javascript">
        const lineChart = document.getElementById('lineChart').getContext('2d');

        var myLineChart = new Chart(lineChart, {
            type: 'line',
            data: {
                labels: ['001', '002', '003'],
                datasets: [{
                    label: 'Line Chart',
                    data: [100, 200, 300],
                    backgroundcolor: 'rgb(6, 128, 250)',
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        })
    </script>
}
